@page
@model IndexModel
@{
	ViewData["Title"] = "Profile";
	ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
	<h3 class="text-muted mb-4">@ViewData["Title"]</h3>
	<partial name="_StatusMessage" for="StatusMessage" />
    
	<div class="row">
		<div class="col-md-8">
			<div class="foreground p-4">
				<form id="profile-form" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
					<div class="discussion-card mb-3 p-3">
						<label asp-for="Username" class="text-muted"></label>
						<input asp-for="Username" class="form-control bg-3c3836 text-fbf1c7" disabled />
					</div>

					<div class="discussion-card mb-3 p-3">
						<label class="text-muted">Name</label>
						<input asp-for="Input.Name" class="form-control bg-3c3836 text-fbf1c7" 
						       placeholder="Your name" />
					</div>

					<div class="discussion-card mb-3 p-3">
						<label class="text-muted">Location</label>
						<textarea asp-for="Input.Location" class="form-control bg-3c3836 text-fbf1c7" 
                                  rows="3" placeholder="About you"></textarea>
					</div>

					<button type="submit" class="sticky-btn w-100">
						Save Changes
					</button>
				</form>
			</div>
		</div>

		<div class="col-md-4">
			<partial name="_ManageNav" />
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}