@model LagomorphForum.Models.Comment

@{
    ViewData["Title"] = "Create Comment";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="create-comment-page d-flex flex-column justify-content-center align-items-center vh-100 text-center">
    <a asp-controller="Home" asp-action="Index"><btn class="sticky-btn">go home <i class="bi bi-house-door"></i></btn></a>
    
    <h1>reply to a discussion (also about rabbits)</h1>
    <hr class="w-100" />

    <div class="row w-100 justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" asp-controller="Comments">
                <input type="hidden" asp-for="DiscussionId" />

                <div class="form-group">
                    <label asp-for="Content" class="control-label mb-3">your rabbit related comment</label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Post Reply" class="btn btn-dark" />
                    <a href="@Url.Action("GetDiscussion", "Home", new { id = Model.DiscussionId })"
                       class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}