@model LagomorphForum.Models.Discussion

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Discussion</h4>
<hr />
<div class="row w-100 justify-content-center">
	<div class="card m-3 opening-card col-md-4">
		<form asp-action="Edit">
			<input type="hidden" asp-for="DiscussionId" />
			<input type="hidden" asp-for="ImageFilename" />
			<input type="hidden" asp-for="CreateDate" />
			<img src="@Url.Content("/images/" + Model.ImageFilename)"
			     alt="@Model.Content"/>
			<p class="fs-5 m-3">@Html.DisplayFor(model => model.CreateDate)</p>
			<div class="form-group">
				<label asp-for="Title" class="control-label card-header"></label>
				<input asp-for="Title" class="form-control mt-2"/>
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Content" class="control-label card-header"></label>
				<textarea asp-for="Content" class="form-control mt-2" rows="5"></textarea>
				<span asp-validation-for="Content" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-dark mt-2"/>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index" class="btn btn-dark mt-2">Cancel</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}